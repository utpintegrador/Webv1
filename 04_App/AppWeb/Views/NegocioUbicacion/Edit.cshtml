
@{
    ViewData["Title"] = "Modificar Ubicación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos {
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
    <style>
        #map {
            height: 400px; /* The height is 400 pixels */
            width: 100%; /* The width is the width of the web page */
        }
    </style>
}

@*Titulo*@
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Modificar Ubicación</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">NegocioUbicacion</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
</div>

@*Botones y filtro*@
<div class="row">
    <div class="col-md-12">
        <div class="card" id="frmWrapper">
            <div class="card-body">

                <button id="btnGuardar" type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar
                </button>

                <a asp-action="Index" id="btnRetornar" class="btn btn-danger btn-sm">
                    <i class="fa fa-reply" aria-hidden="true"></i> Retornar
                </a>

                <div class="row">
                    <div class="col-md-12">
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-3">
                        <div class="form-group">
                            <label>Negocio</label>
                            <select id="cboNegocio" class="form-control form-control-line select2" style="width: 100%;" disabled></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-3">
                        <div class="form-group">
                            <label>Dirección</label>
                            <input type="text" id="txtTitulo" class="form-control form-control-sm form-control-line">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-3">
                        <div class="form-group">
                            <label>Descripción</label>
                            <input type="text" id="txtDescripcion" class="form-control form-control-sm form-control-line">
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom: -25px;">
                    <div class="col-sm-4 col-md-4 col-lg-3">
                        <div class="form-group">
                            <input type="checkbox" id="chkPredeterminado" class="filled-in chk-col-black" />
                            <label for="chkPredeterminado">Predeterminado</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header" style="background-color: white;">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-3">
                        <div class="form-group">
                            <label>Latitud</label>
                            <input type="number" id="txtLatitud" class="form-control form-control-sm form-control-line" readonly>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3">
                        <div class="form-group">
                            <label>Longitud</label>
                            <input type="number" id="txtLongitud" class="form-control form-control-sm form-control-line" readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="map"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/lib/select2/js/select2.min.js" type="text/javascript"></script>
    <script src="~/lib/sweetalert2/sweetalert2-9.js" type="text/javascript"></script>
    <script src="~/js/Maestro/NegocioUbicacionModificar.js"></script>

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=">
    </script>
}