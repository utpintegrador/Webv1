    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Usuario</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Usuario</a></li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </div>
</div>

@*Botones y filtro*@
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" style="margin-bottom: -25px;">


                <button id="btnRecargar" type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-refresh" aria-hidden="true"></i> Recargar
                </button>
                @*<button type="button" class="btn btn-success btn-sm" onclick="location.href='@Url.Action("Create", "Usuario")'">
                        <i class="fa fa-plus" aria-hidden="true"></i> Nuevo
                    </button>*@


                <div class="row">
                    <div class="col-md-12">
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group">
                            <label>Buscar</label>
                            <input type="text" id="txtDescripcion" class="form-control form-control-sm form-control-line">
                        </div>
                    </div>

                    <div class="col-6 col-sm-3 col-md-2 col-lg-2">
                        <div class="form-group">
                            <label>Estado</label>
                            <select id="cboEstado" class="form-control form-control-line select2" style="width: 100%">
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tb1" class="table table-hover p-t-20">
                        <thead style="background-color: #1976d2; color:#fff;">
                            <tr>
                                <th style="width:50px;">
                                    @HttpUtility.HtmlDecode("N°")
                                </th>
                                <th>
                                    @HttpUtility.HtmlDecode("Usuario")
                                </th>
                                <th>
                                    @HttpUtility.HtmlDecode("Nombre")
                                </th>
                                <th>
                                    @HttpUtility.HtmlDecode("Apellidos")
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th style="text-align:center; width:130px;">
                                    @HttpUtility.HtmlDecode("Acción")
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 1; i <= 100; i++)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        Usuario @i
                                    </td>
                                    <td>
                                        Nombre @i
                                    </td>
                                    <td>
                                        Apellido @i
                                    </td>
                                    <td>
                                        Activo
                                    </td>
                                    <td align="center">
                                        <a href="@Url.Action("Edit", "Usuario", new { id = i })" class="btn btn-warning btn-sm">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </a>
                                        <a href="#" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                            @*@foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Item)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apellidos)
                                        </td>
                                        <td align="center">
                                            <a href="@Url.Action("Details", "Usuario", new { id = item.IdUsuario })" class="btn btn-primary btn-sm">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Usuario", new { id = item.IdUsuario })" class="btn btn-warning btn-sm">
                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Usuario", new { id = item.IdUsuario })" class="btn btn-danger btn-sm">
                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }*@


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/select2/js/select2.min.js" type="text/javascript"></script>
    <script src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/media/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/datatables/media/js/dataTables.select.min.js"></script>
    <script src="~/lib/datatables/media/js/select.bootstrap4.min.js"></script>
