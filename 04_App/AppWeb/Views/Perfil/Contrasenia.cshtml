@{
    ViewData["Title"] = "Modificar Contraseña";
}

@*Titulo*@
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Modificar Contraseña</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Perfil</a></li>
            <li class="breadcrumb-item active">Contrasenia</li>
        </ol>
    </div>
</div>

@*Botones y filtro*@
<div class="row">
    <div class="col-md-12">
        <div class="card" id="frmWrapper">
            <div class="card-body">

                <a asp-controller="Home" asp-action="Index" id="btnInicio" class="btn btn-primary btn-sm">
                    <i class="fa fa-bar-chart" aria-hidden="true"></i> Inicio
                </a>

                <button id="btnGuardar" type="button" class="btn btn-success btn-sm">
                    <i class="fa fa-save" aria-hidden="true"></i> Guardar
                </button>

                <div class="row">
                    <div class="col-md-12">
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <div class="form-group">
                            <label>Contraseña Actual</label>
                            <input type="password" id="txtContraseniaActual" class="form-control form-control-sm form-control-line">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <div class="form-group">
                            <label>Contraseña Nueva</label>
                            <input type="password" id="txtContraseniaNueva" class="form-control form-control-sm form-control-line">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <div class="form-group">
                            <label>Confirmar Nueva Contraseña</label>
                            <input type="password" id="txtConfirmarNuevaContrasenia" class="form-control form-control-sm form-control-line">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/lib/sweetalert2/sweetalert2-9.js" type="text/javascript"></script>
    <script src="~/js/Seguridad/PerfilModificarContrasenia.js"></script>
}