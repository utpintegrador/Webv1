@using System.Web

@{
    Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
    ViewData["Title"] = "Registrar";
}

@section estilos{ 
    <link href="~/css/Validaciones.css" />
    <style>
        .sinborde {
            border-top: 0;
            border-right: 0;
            border-left: 0;
            border-radius: 0;
        }

        .error {
            color: #dc3545;
        }
    </style>
}

<section id="wrapper" class="login-register login-sidebar" style="background-image:url(/template/assets/images/background/login-register.jpg);">
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal needs-validation" id="loginform" novalidate >
                <a href="javascript:void(0)" class="text-center db"><img src="~/template/assets/images/logo-icon.png" alt="Home" style="width:100px;" /><br /><img src="~/template/assets/images/logo-text.png" alt="Home" style="width:250px;" /></a>
                <h3 class="box-title m-t-40 m-b-0">Registrate ahora!!</h3><small>Crea tu cuenta</small>
                <div class="form-group m-t-20">
                    <div class="col-xs-12">
                        <input class="form-control sinborde" type="text" required minlength="3" placeholder="Nombre" id="txtNombre" name="txtNombre">
                        <div class="valid-feedback">Correcto</div>
                    </div>
                </div>
                <div class="form-group m-t-20">
                    <div class="col-xs-12">
                        <input class="form-control sinborde" type="text" required minlength="3" placeholder="Apellido" id="txtApellido" name="txtApellido">
                        <div class="valid-feedback">Correcto</div>
                    </div>
                </div>
                <div class="form-group m-t-20">
                    <div class="col-xs-12">
                        <input class="form-control sinborde" type="text" required minlength="3" placeholder="Nickname" id="txtUserName" name="txtUserName">
                        <div class="valid-feedback">Correcto</div>
                    </div>
                </div>
                <div class="form-group m-t-20">
                    <div class="col-xs-12">
                        <input class="form-control sinborde" type="email" required minlength="5" placeholder="Correo Electrónico" id="txtCorreoElectronico" name="txtCorreoElectronico">
                        <div class="valid-feedback">Correcto</div>
                    </div>
                </div>
                <div class="form-group m-t-20">
                    <div class="col-xs-12">
                        <input class="form-control sinborde" type="password" required minlength="3" placeholder="Contraseña" id="txtContrasenia" name="txtContrasenia">
                        <div class="valid-feedback">Correcto</div>
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" 
                                type="button" 
                                id="btnRegistrar">Registrar</button>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <p>Ya tienes una cuenta? <a class="text-primary m-l-5" asp-controller="Home" asp-action="Login"><b>Inicia Sesión</b></a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

