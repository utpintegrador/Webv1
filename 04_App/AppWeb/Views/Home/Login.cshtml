@model IEnumerable<Entidad.Dto.Seguridad.UsuarioRegistrarDto>

@{
    Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
    ViewData["Title"] = "Login";
}

<section id="wrapper" class="login-register login-sidebar" style="background-image:url(/template/assets/images/background/login-register.jpg); position: fixed;">
    @*<link rel="icon" type="image/png" sizes="16x16" href="~/template/assets/images/favicon.png">*@
    <div class="login-box card" style="min-height: 480px;">
        <div class="card-body">
            <form class="form-horizontal form-material" id="loginform">
                @*<div> asp-controller="Usuario" asp-action="Login"</div>*@
                <a href="javascript:void(0)" class="text-center db"><img src="~/template/assets/images/logo-icon.png" alt="Home" style="width:100px;" /><br /><img src="~/template/assets/images/logo-text.png" alt="Home" style="width:250px;" /></a>
                <div class="form-group m-t-40">
                    <div class="col-xs-12">
                        <input id="txtCorreoElectronico" name="txtCorreoElectronico" class="form-control" type="text" required placeholder="Correo electrónico" autocomplete="off">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input id="txtContrasenia" name="txtContrasenia" class="form-control" type="password" required placeholder="Contraseña" autocomplete="off">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="checkbox checkbox-primary pull-left p-t-0" style="display:none;">
                            <input id="checkbox-signup" type="checkbox" class="filled-in chk-col-light-blue">
                            <label for="checkbox-signup"> Recuérdamee </label>
                        </div>
                        <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Olvidaste tu contraseña?</a>
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button id="btnIniciarSesion" class="btn btn-primary btn-lg btn-block text-uppercase btn-rounded" type="button">Iniciar</button>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        No tienes una cuenta? <a class="text-primary m-l-5" asp-controller="Home" asp-action="Registrar"><b>Registrar</b></a>
                    </div>
                </div>
            </form>


            <form class="form-horizontal form-material" id="recoverform">
                @*<asp-controller="Home" asp-action="Login">*@
                <div class="form-group ">
                    <div class="col-xs-12">
                        <h3>Recuperar contraseña</h3>
                        <p class="text-muted">Ingresa tu correo y se te enviará las instrucciones! </p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input id="txtCorreoElectronicoRecuperar" class="form-control" type="email" required="" placeholder="Correo electrónico">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button id="btnRecuperarContraseña" class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="button">Enviar</button>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <a href="javascript:void(0)" id="to-login" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Te recordaste?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/lib/sweetalert2/sweetalert2-9.js" type="text/javascript"></script>
    <script src="~/js/Seguridad/Login.js"></script>
}
