@{
    ViewData["Title"] = "Home Page";
}

@section estilos{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" />
}

@*Titulo*@
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Dashboard</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </div>
</div>

@*Seccion de resumenes*@
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header bg-white card-title"><b>Mes actual</b></h5>
            <div class="card-body" style="margin-bottom:-25px;">
                <div id="resumenMesActual" class="row">
                </div>
            </div>
        </div>
    </div>
</div>


@*Seccion de graficos*@
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header bg-white card-title"><b>Historial</b></h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Cantidad de ventas</h4>
                                <div>
                                    <canvas id="grafico1" height="150"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Productos mas solicitados - TOP 3</h4>
                                <div>
                                    <canvas id="grafico2" height="150"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Categorias mas solicitadas - TOP 3</h4>
                                <div>
                                    <canvas id="grafico3" height="150"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Valoracion obtenida</h4>
                                <div>
                                    <canvas id="grafico4" height="150"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script src="~/js/Dashboard/Graficos.js"></script>
}
